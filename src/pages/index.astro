---
import Layout from '../layouts/Layout.astro';
import asado from '../assets/asado.webp'
import asado2 from '../assets/asado_2.webp'
import {Image} from 'astro:assets'
import arrow from '../assets/arrow.svg'
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<section class="w-full h-1/3 flex" >
		<div class="w-1/2 h-full">
			<Image src={asado} alt="Asado" class="w-full h-full object-cover rounded-sm" loading="lazy"/>
		</div>
		<a class="bg-white h-1/2 w-1/2 flex justify-center items-center" href="/entradas" >
			<Image src={arrow} alt="Asado" class="w-16" loading="lazy"/> 
		</a>
	</section>
	<section class="flex w-full h-2/3">
		<div class="text-white w-1/2 flex justify-center items-center">
			<p class="filter -rotate-90 text-7xl animated_text">MENÃš</p> 
		</div>
		<div class="w-1/2 flex flex-col justify-between">
			<div class="text-white w-full h-2/5 flex flex-col justify-center items-center text-3xl">
				<p class="animated_text_h">Parrilla</p>
				<p class="animated_text_h_d">El Tano</p>
			</div>
			<div class="w-full h-full">
				<Image src={asado2} alt="Asado" class="w-full h-full object-cover rounded-sm" loading="lazy"/>
			</div>
		</div>
	</section>
</Layout>

<style>
	@keyframes animatedText {
		0% {
        opacity: 0;
        transform: translateY(0%) rotate(-90deg);
    	}
		100% {
			opacity: 1;
			transform: translateY(-100%) rotate(-90deg);
		}
	}

	@keyframes animatedText_h {
		0% {
        opacity: 0;
        transform: translateY(-100%);
    	}
		100% {
			opacity: 1;
			transform: translateY(0%);
		}
	}
	.animated_text{
		animation: animatedText 1.5s ease-in-out forwards
	}

	.animated_text_h{
		animation: animatedText_h 1.5s ease-in-out forwards
	}

	.animated_text_h_d{
		animation: animatedText_h 1s ease-in-out forwards
	}
</style>