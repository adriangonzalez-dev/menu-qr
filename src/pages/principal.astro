---
import Layout from "../layouts/Layout.astro";
import Item from "../components/Item.astro"
import { getFoods } from "../services/getData";
import asado from "../assets/asado.webp";
import { Image  } from "astro:assets";
import arrowRight from "../assets/arrow.svg";
import arrowLeft from "../assets/arrow-left.svg";

const data = getFoods(2);
---

<Layout>
    <section class="bg-white w-full h-2/3 p-4 flex flex-col gap-10 items-center justify-center">
        <h1 class="text-black text-4xl">PARRILLA</h1>
        <ul class="w-4/5 flex flex-col gap-2">
            {
                data.map(x=><Item name={x.name} price={x.price}/>)
            }
        </ul>

    </section>
    <section class="w-full h-1/3">
        <div class="w-full relative">
            <Image src={asado} alt="Entrada" class="object-cover w-full h-full" loading="lazy"/>
            <a class={`bg-white rounded-md p-2 flex justify-center items-center absolute top-1 right-1`} href="/acompanamiento">
                <Image src={arrowRight} alt="arrow" class="w-10" loading="lazy"/> 
            </a>
            <a class={`bg-white rounded-md p-2 flex justify-center items-center absolute top-1 left-1`} href="/entradas">
                <Image src={arrowLeft} alt="arrow" class="w-10" loading="lazy"/> 
            </a>
        </div>
    </section>
</Layout>