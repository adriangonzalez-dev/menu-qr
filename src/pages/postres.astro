---
import Layout from "../layouts/Layout.astro";
import {getFoods} from "../services/getData";
import Item from "../components/Item.astro";
import postre from "../assets/postre.webp";
import {Image} from "astro:assets";
import arrowRight from "../assets/arrow.svg";
import arrowLeft from "../assets/arrow-left.svg";

const acompanamientos = getFoods(5)
---

<Layout>
    <section class="flex w-full h-full">
        <div class="bg-white w-full flex flex-col justify-between">
            <div class="w-full h-full flex items-center justify-evenly flex-col">
                <p class=" text-4xl">POSTRES</p>
                <ul class="w-4/5 flex flex-col gap-2">
                    {
                        acompanamientos.map(x=><Item product={x}/>)
                    }
                </ul>
            </div>
            <div class="w-full relative">
                <Image src={postre} alt="AcompaÃ±anmiento" class="object-cover w-full h-full" loading="lazy"/>
                <a class={`bg-white p-2 rounded-md flex justify-center items-center absolute top-1 right-1`} href="/reserva">
                    <Image src={arrowRight} alt="arrow" class="w-10" loading="lazy"/> 
                </a>
                <a class={`bg-white p-2 rounded-md flex justify-center items-center absolute top-1 left-1`} href="/bebidas">
                    <Image src={arrowLeft} alt="arrow" class="w-10" loading="lazy"/> 
                </a>
            </div>
        </div>
    </section>
</Layout>